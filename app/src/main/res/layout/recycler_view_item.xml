<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/grey"
    android:layout_margin="5dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/item_number_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="№"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/item_number_symbol"
        android:textSize="20sp"
        tools:ignore="RelativeOverlap"
        android:text="1"/>

    <Button
        android:id="@+id/item_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Press"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimaryDark"
        android:shadowColor="#fff"
        android:textColorHighlight="@color/colorAccent"
        android:textColor="@color/colorAccent"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/view_holder_number"
        android:layout_marginEnd="5dp"
        android:textSize="20sp"
        tools:ignore="HardcodedText,RelativeOverlap,SmallSp"
        android:text="VH №:"/>

    <TextView
        android:id="@+id/view_holder_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        tools:ignore="HardcodedText,SmallSp"
        android:text="123"/>
</RelativeLayout>